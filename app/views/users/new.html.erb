<h1>Users#new</h1>
<p>Find me in app/views/users/new.html.erb</p>
<h1>Sign Up</h1>
<%= form_for @user do |user| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form Incomplete!</h2>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= user.label :pref_name %>
    <%= user.text_field :pref_name %>
  </div>
  <div class="field">
    <%= user.label :email %>
    <%= user.text_field :email %>
  </div>
  <div class="field">
    <%= user.label :password %>
    <%= user.text_field :password %>
  </div>
  <div class="field">
    <%= user.label :password_confirmation %>
    <%= user.text_field :password_confirmation %>
  </div>
  <div class="actions"><%= user.submit %></div>
<% end %>
